<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background circle -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#000000" />
        </shape>
    </item>
    <!-- Gradient overlay -->
    <item>
        <shape android:shape="oval">
            <gradient
                android:startColor="#737373"
                android:endColor="#737373"
                android:type="radial" />
        </shape>
    </item>
</layer-list>
