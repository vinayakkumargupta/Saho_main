<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NearBy.MainActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/title2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NEAR BY"
                android:onClick="Backset"
                android:textSize="22dp"
                android:drawablePadding="20dp"
                android:drawableTint="@color/color_121212"
                android:drawableLeft="@drawable/ic_back"
                android:textColor="@color/color_121212"/>
        </Toolbar>



    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chipGroup"
        android:layout_below="@id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:singleLine="true">

        <com.google.android.material.chip.Chip
            android:id="@+id/chipHospital"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:onClick="searchExampleButtonClicked"
            android:layout_height="wrap_content"
            android:text="Hospital" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipPolice"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:onClick="geocodeAnAddressButtonClicked"
            android:layout_height="wrap_content"
            android:text="Police Station" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipFire"
            android:onClick="geocodeAnAddressButtonClicked1"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Firestation" />


        <!-- Add other chips here -->

    </com.google.android.material.chip.ChipGroup>

    <com.here.sdk.mapview.MapView
        android:id="@+id/map_view2"
      android:layout_below="@id/chipGroup"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

    </com.here.sdk.mapview.MapView>

    <com.here.sdk.mapview.MapView
        android:id="@+id/map_view1"
        android:layout_below="@id/chipGroup"
        app:layout_constraintTop_toBottomOf="@id/chipGroup"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="7dp" >

    </com.here.sdk.mapview.MapView>

    <com.here.sdk.mapview.MapView
        android:id="@+id/map_view"
        android:layout_below="@id/chipGroup"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/chipGroup"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="@+id/map_view2"
        tools:layout_editor_absoluteX="7dp" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent">

    </LinearLayout>

    <Button
        android:id="@+id/button2"
        android:layout_width="119dp"
        android:layout_height="46dp"
        android:layout_weight="1"
        android:onClick="geocodeAnAddressButtonClicked"
        android:text="Police "
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.452"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.798" />

    <Button
        android:id="@+id/button6"
        android:layout_width="104dp"
        android:layout_height="45dp"
        android:layout_weight="1"
        android:visibility="gone"
        android:onClick="searchExampleButtonClicked"
        android:text="Hospitals"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.022"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.798" />

    <Button
        android:id="@+id/button7"
        android:layout_width="113dp"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:visibility="gone"
        android:onClick="geocodeAnAddressButtonClicked1"
        android:text="Fire Station"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.922"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.797" />

    </RelativeLayout>



</androidx.constraintlayout.widget.ConstraintLayout>
